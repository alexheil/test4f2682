<%= render "partials/static_pages_header" %>
<div class="container">
  <div class="landing-container">
    <div class="form-title">
      <h3>edit <%=  @fan.fan_name %>'s profile</h3>
    </div>
    <%= form_for(@profile, url: fan_profile_path) do |f| %>
      <div class="field">
        <%= f.label :location, "location", class: "label" %>
        <%= f.text_field :location, class: "text-field" %>
        <p class="text-under-field">city, state if in the US // city, country if international</p>
      </div>
      <div class="field">
        <%= f.label :biography, "biography", class: "label" %>
        <%= f.text_area :biography, autofocus: true , class: "text-area" %>
      </div>
      <div class="field">
        <%= f.label :website, "website", class: "label" %>
        <%= f.text_field :website, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :cover_image, "cover image url", class: "label" %>
        <%= f.text_field :cover_image, class: "text-field" %>
        <p class="text-under-field">1170x180 // please use <%= link_to "imgur", "http://imgur.com" %> direct links</p>
      </div>
      <div class="field">
        <%= f.label :profile_image, "profile image url", class: "label" %>
        <%= f.text_field :profile_image, class: "text-field" %>
        <p class="text-under-field">300x300 // want to upload your own image? use <%= link_to "imgur", "http://imgur.com" %></p>
      </div>
      <div class="actions">
        <%= f.submit "update profile", class: "submit-button" %>
      </div>
      <p class="text-under-profile">leave fields blank if you don't want to display them</p>
    <% end %>
  </div>
</div>
<%= render "partials/static_pages_footer" %>
