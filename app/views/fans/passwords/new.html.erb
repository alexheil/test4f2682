<%= render "partials/static_pages_header" %>
<div class="container">
  <div class="landing-container">
    <div class="form-title">
      <h3>forgot your password?</h3>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :email, "email", class: "label" %>
        <%= f.email_field :email, autofocus: true, class: "text-field" %>
      </div>
      <div class="actions">
        <%= f.submit "reset my password", class: "submit-button" %>
      </div>
    <% end %>
    <div class="shared-links">
      <%= render "fans/shared/links" %>
    </div>
  </div>
</div>
<%= render "partials/static_pages_footer" %>
