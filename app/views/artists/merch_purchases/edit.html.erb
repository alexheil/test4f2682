<%= render 'partials/home_header' %>
<div class="container">
  <div class="landing-container">
    <div class="form-title">
      <h3>we need some more information</h3>
    </div>
    <%= form_for(@purchase, url: artist_merch_purchase_path) do |f| %>
      <div class="field">
        <%= f.label :full_name, "full name", class: "label" %>
        <%= f.text_field :full_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :street_address, "street address", class: "label" %>
        <%= f.text_field :street_address, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :city, "city", class: "label" %>
        <%= f.text_field :city, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :state, "state", class: "label" %>
        <%= f.text_field :state, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :zip_code, "zip code", class: "label" %>
        <%= f.text_field :zip_code, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :country, "country", class: "label" %>
        <span class="artist-merch-purchase-filled-in-right">// united states</span>
      </div>
      <div class="actions">
        <%= f.submit "time to pay", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>
