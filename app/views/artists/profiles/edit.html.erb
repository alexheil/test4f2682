<div class="container">
  <div class="landing-container">
    <div class="form-title">
      <h3>edit <%=  @artist.artist_name %>'s profile</h3>
    </div>
    <%= form_for(@profile, url: artist_profile_path) do |f| %>
      <div class="field">
        <%= f.label :facebook_url, "facebook url", class: "label" %>
        <%= f.text_field :facebook_url, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :twitter_url, "twitter url", class: "label" %>
        <%= f.text_field :twitter_url, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :youtube_url, "youtube url", class: "label" %>
        <%= f.text_field :youtube_url, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :itunes_url, "itunes url", class: "label" %>
        <%= f.text_field :itunes_url, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :amazon_url, "amazon url", class: "label" %>
        <%= f.text_field :amazon_url, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :google_play_url, "google play url", class: "label" %>
        <%= f.text_field :google_play_url, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :location, "location", class: "label" %>
        <%= f.text_field :location, class: "text-field" %>
        <p class="text-under-field">city, state if in the US // city, country if international</p>
      </div>
      <div class="field">
        <%= f.label :genre, "genre", class: "label" %>
        <%= f.select :genre, options_for_select(music_genres)%>
      </div>
      <div class="field">
        <%= f.label :members, "members", class: "label" %>
        <%= f.text_field :members, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :record_label, "record label", class: "label" %>
        <%= f.text_field :record_label, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :biography, "biography", class: "label" %>
        <%= f.text_area :biography, autofocus: true , class: "text-area" %>
      </div>
      <div class="field">
        <%= f.label :cover_image, "cover image url", class: "label" %>
        <%= f.text_field :cover_image, class: "text-field" %>
        <p class="text-under-field">1170x390 // want to upload your own image? use <%= link_to "imgur", "http://imgur.com" %></p>
      </div>
      <div class="field">
        <%= f.label :profile_image, "profile image url", class: "label" %>
        <%= f.text_field :profile_image, class: "text-field" %>
        <p class="text-under-field">300x300 // want to upload your own image? use <%= link_to "imgur", "http://imgur.com" %></p>
      </div>
      <div class="actions">
        <%= f.submit "update profile", class: "submit-button" %>
      </div>
      <p class="text-under-profile">leave fields blank if you don't want to display them</p>
    <% end %>
  </div>
</div>
<%= render "partials/static_pages_footer" %>
