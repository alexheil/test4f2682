<div class="container">
  <div class="landing-container">
    <div class="form-title">
      <h3>add merch</h3>
    </div>
    <%= form_for(@merch, url: artist_merches_path(@artist)) do |f| %>
      <div class="field">
        <%= f.label :paypal_email, "paypal email", class: "label" %>
        <%= f.text_field :paypal_email, class: "text-field" %>
        <p class="text-under-field">leave blank to use your artist email // <%= @artist.email %></p>
      </div>
      <div class="field">
        <%= f.label :about, "about", class: "label" %>
        <%= f.select :about, options_for_select(merch_about) %>
      </div>
      <div class="field">
        <%= f.label :merch_name, "merch name", class: "label" %>
        <%= f.text_field :merch_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :merch_description, "merch description", class: "label" %>
        <%= f.text_area :merch_description, class: "text-area" %>
        <p class="text-under-field">optional // but here is your chance to really talk it up</p>
      </div>
      <div class="field">
        <%= f.label :base_price, "base price", class: "label" %>
        <%= f.text_field :base_price, class: "text-field" %>
        <p class="text-under-field">price before shipping</p>
      </div>
      <div class="field">
        <%= f.label :shipping_price, "shipping price", class: "label" %>
        <%= f.text_field :shipping_price, class: "text-field" %>
        <p class="text-under-field">cost to ship // we do some serious maths behind the scenes to come up with a total price for you</p>
      </div>
      <div class="field">
        <%= f.label :quantity, "quantity", class: "label" %>
        <%= f.text_field :quantity, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :options, "options", class: "label" %>
        <%= f.text_field :options, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :merch_image, "merch image url", class: "label" %>
        <%= f.text_field :merch_image, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :return_policy, "return policy", class: "label" %>
        <%= f.text_area :return_policy, class: "text-area" %>
        <p class="text-under-field">required cause laws // use our default <%= link_to "return policy", '#' %> if your brain isn't working right now</p>
      </div>
      <div class="field">
        <%= f.label :shipping_info, "shipping info", class: "label" %>
        <%= f.text_area :shipping_info, class: "text-area" %>
        <p class="text-under-field">require cause laws // use our default <%= link_to "shipping info", '#' %> if your brain never works</p>
      </div>
      <div class="actions">
        <%= f.submit "add merch", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>
