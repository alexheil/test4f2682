<div class="container">
  <div class="landing-container">
    <div class="artist-add-new-track-button-container">
      <%= link_to "add new track to this album", new_artist_track_path, class: "artist-add-new-track-button" %>
    </div>
    <% if @album.artist_tracks.any? %>
    <div class="artist-album-track-listing">
      <p class="artist-album-track-listing-title">track listing</p>
      <% @album.artist_tracks.each do |track| %>
      <div class="artist-album-track-listing-tracks">
        <%= track.track_number %> - <%= link_to track.track_name, edit_artist_track_path(track) %>
        <% if @artist == current_artist %>
             // <%= link_to "delete track", artist_track_path(track), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %></span>
            <% end %>
      </div>
      <% end %>
    </div>
    <% end %>
    <div class="form-title">
      <h3>edit album</h3>
    </div>
    <%= form_for(@album, url: artist_album_path) do |f| %>
      <div class="field">
        <%= f.label :album_name, "album name", class: "label" %>
        <%= f.text_field :album_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :album_year, "album year", class: "label" %>
        <%= f.text_field :album_year, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :album_cover_art_url, "album cover art url", class: "label" %>
        <%= f.text_field :album_cover_art_url, class: "text-field" %>
      </div>
      <div class="actions">
        <%= f.submit "add album", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>
