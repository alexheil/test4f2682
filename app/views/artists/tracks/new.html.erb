<div class="container">
  <div class="landing-container">
    <div class="form-title">
      <h3>add a track to <%= @album.album_name %></h3>
    </div>
    <%= form_for(@track, url: artist_tracks_path(@album)) do |f| %>
      <%= f.hidden_field :artist_album_id %>
      <%= f.hidden_field :artist_id %>
      <div class="field">
        <%= f.label :track_number, "track number", class: "label" %>
        <%= f.text_field :track_number, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :track_name, "track name", class: "label" %>
        <%= f.text_field :track_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :track_artist, "track artist", class: "label" %>
        <%= f.text_field :track_artist, class: "text-field" %>
        <p class="text-under-field">leave blank for your artist name</p>
      </div>
      <div class="field">
        <%= f.label :track_url, "track url", class: "label" %>
        <%= f.text_field :track_url, class: "text-field" %>
        <p class="text-under-field">optional</p>
      </div>
      <div class="field">
        <%= f.label :track_lyrics, "track lyrics", class: "label" %>
        <%= f.text_area :track_lyrics, class: "text-area" %>
        <p class="text-under-field">optional</p>
      </div>
      <div class="actions">
        <%= f.submit "add track", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>
